rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Autoriser la lecture pour tous (images publiques)
    match /{allPaths=**} {
      allow read: if true;
    }
    
    // Autoriser l'écriture pour les utilisateurs authentifiés
    match /products/{fileName} {
      allow write: if request.auth != null;
    }
    match /services/{fileName} {
      allow write: if request.auth != null;
    }
    match /workspaces/{fileName} {
      allow write: if request.auth != null;
    }
    match /health/{fileName} {
      allow write: if request.auth != null;
    }
    match /housing/{fileName} {
      allow write: if request.auth != null;
    }
    match /events/{fileName} {
      allow write: if request.auth != null;
    }
    match /actors/{fileName} {
      allow write: if request.auth != null;
    }
    match /profiles/{fileName} {
      allow write: if request.auth != null;
    }
  }
}
